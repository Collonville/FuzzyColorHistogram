<Window x:Class="FuzzyColorHistogram1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:FuzzyColorHistogram1"
        Title="Histogram" Height="400" Width="785.075">
    <Grid x:Name="root" Background="Transparent" AllowDrop="True" Drop="root_Drop" Margin="0,0,0.2,-17.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="19*" />
        </Grid.ColumnDefinitions>
        <Image Source="{Binding ImageSource}" Margin="0,0,10,0"/>
        <oxy:PlotView x:Name="plotHistogram" Model="{Binding HistModel}" Margin="1,0,220,10" Grid.Column="1"/>
        <TextBlock x:Name="ToneResult" Grid.Column="1" HorizontalAlignment="Left" Margin="279,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="312" Width="205"/>
    </Grid>
</Window>

